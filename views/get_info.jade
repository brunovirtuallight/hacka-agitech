extends layout

block content

  style(type="text/css").
    
    body{
      background: rgba(236, 239, 241, 0.31)
    }

    #logo{
      padding:5px 20px;
      border-radius:3px;
      color:white
    }

    #lista_prestacoes{
      font-size:14px;
      font-family: Calibri;
    }

    #lista_prestacoes tr:hover{
      cursor:pointer;
    }

    #div_menu_sidebar{
      width:18%;
      min-height:200px;
      float:left;
      border:1px solid;
      box-shadow:1px 1px 1px;
      border-radius:3px;
      background:rgba(74, 91, 185, 0.11);
      padding:7px;
    }

    #div_menu_sidebar a{
      display:block;
      text-decoration:none;
    }

    #div_menu_sidebar a:hover{
      cursor:pointer;
      border-bottom:1px solid;
      background:steelblue;
      color:white;
    }

    #div_container{
      width:80%;
      height:560px;
      float:right;
      overflow:auto;
    }

    #form_auth{
      width:400px;
      margin:0 auto;
    }

    #form_auth input{
      margin:10px;
    }
  
  script(type="text/javascript").

    

  div(id='div_info')

    form(id='form_auth')
      h2 Autorização do Facebook
      input(type='button' value='Sim')
      input(type='button' value='Não')